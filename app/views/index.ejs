<% include partials/header %>

<div class="container">
  <h1>node-chat with ejs</h1>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Online friends
        </div>
        <div id="chat-users" class="panel-body">
          <ul id="chat-onlineUsers"></ul>
        </div>
      </div>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <p id="chat-connectionStatus" class="text-danger pull-left">
            <i class="fa fa-circle"></i>&nbsp;
          </p>
          <p id="chat-username">Offline</p>
        </div>
        <div id="chat-messages" class="panel-body"></div>
        <div class="panel-footer">
          <form>
            <div class="row">
              <div class="col-md-9 col-sm-9 col-xs-9">
                <textarea id="chat-newmessage" class="form-control"></textarea>
              </div>
              <div class="col-md-3 col-sm-3 col-xs-3">
                <button id="chat-send-message" class="btn btn-default">
                  <i class="fa fa-send"></i>&nbsp;
                  Send
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
